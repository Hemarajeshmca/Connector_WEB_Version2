<script>
    $(document).ready(function () {

        const urlParams = new URLSearchParams(window.location.search);
        let userCode = "";
        if (urlParams != "") {
           userCode  = urlParams.get('user_code');
        }
        else {
            userCode = 'Blank';
        }
        sessionStorage.setItem("userCode", userCode);

    $.ajax({
        type: 'GET',
        url: '@Url.Action("GellAllConnectors", "Connectors")',
        contentType: false,
        processData: false,
        cache: false,
        success: function (response) {
            listgrid(response);
        },
        error: function (er) {
            alert(er)
            console.log(er)
        }
    });
        });
</script>
<script>
    function listgrid(data) {
        try {
            $("#connectorGrid").kendoGrid({
                dataSource: {
                    data: data,
                    schema: {
                        model: {
                            fields: {
                                connection_gid: { type: "string" },
                                connection_name: { type: "string" },
                                source_db_type: { type: "string" },
                                source_host_name: { type: "string" },
                                connection_status: { type: "string" },
                                Action: { type: "String" },
                            }
                        }
                    },
                    pageSize: 15
                },
                height: 450,
                width: 1058,

                pageable: true,
                sortable: true,
                filterable: true,
                selectable: "single",
                //sort: {
                //    field: "pipelinename",
                //    dir: "desc"
                //}
                columns: [
                    {
                        field: "Action",
                        title: "Action",
                        template: "<div class='action-cell'><i class='glyphicon glyphicon-pencil'style=color:green;cursor:pointer;' onclick=editconnection($(this)) title='Edit'></i> </t> <i class='glyphicon glyphicon-trash' style='color:red;margin-left: 20% !important;cursor:pointer;' onclick=deleteconnection($(this)) title='Delete'></i></div>",
                        filterable: false,
                        sortable: false,
                        width: 80,

                    },
                    {
                        field: "connection_gid",
                        title: "Connection gid",
                        width: 100,
                        hidden: true
                    }, {
                        field: "connection_name",
                        title: "Connection Name",
                        width: 200
                    }, {
                        field: "source_db_type",
                        title: "Source Type",
                        width: 200
                    },
                    {
                        field: "source_host_name",
                        title: "Host Name",
                        width: 200
                    },
                    {
                        field: "connection_status",
                        title: "Connection status",
                        width: 200,
                        template: function (dataItem) {
                            // Check the condition for changing the color
                            if (dataItem.connection_status === "Active") {
                                return "<div class='status-icon-circle connected'></div> " + dataItem.connection_status;
                            }
                            else if (dataItem.connection_status === "Inactive") {
                                return "<div class='status-icon-circle disconnected'></div> " + dataItem.connection_status;
                            }
                            else {
                                return "<div class='status-icon-circle draft'></div> " + dataItem.connection_status;
                            }
                        }
                    }],
                // editable: false,
            });
            // Ingnore Inactive Connectors
            var grid = $("#connectorGrid").data("kendoGrid");
            function IgnoreInActiveData() {
                var dataSource = grid.dataSource;
                dataSource.filter({
                    logic: "and",
                    filters: [
                        { field: "connection_status", operator: "neq", value: "InActive" }
                    ]
                });
            }
            IgnoreInActiveData();
        }
        catch (err) {
            alert(err);
        }
    }

    function addnewconnection() {
        window.location.href = '@Url.Action("ConnectorDetails", "Connectors")';//"/Connectors/ConnectorDetails";
    }



    function editconnection(e) {
        var entityGrid = $("#connectorGrid").data("kendoGrid");
        var conn_gid = entityGrid.dataItem(e.select().closest("tr")).connection_gid;


        if (conn_gid > 0) {
            window.location.href = '@Url.Action("ConnectorDetails", "Connectors")?id=' + conn_gid; // Use the generated URL here
            //window.location.href = "~/Connectors/ConnectorDetails?id=" + conn_gid;
        }
    }


    function deleteconnection(e) {
        let text = "Are you sure to delete?";
        jConfirm(text, "Connector", function (f) {
            if (f == true) {
                var entityGrid = $("#connectorGrid").data("kendoGrid");
                var conn_gid = entityGrid.dataItem(e.select().closest("tr")).connection_gid;

                $.ajax({
                    type: "Post",
                    url: '@Url.Action("Deleteexistingconnector", "Connectors")?id=' + conn_gid,
                    dataType: "json",
                    success: function (response) {
                        jAlert(response, "Connector", function (g) {
                            if (g == true) {
                                window.location.href = '@Url.Action("Connectorslist", "Connectors")';
                            }
                        });
                    },
                    error: function (er) {
                        jAlert(er, "Error");
                        //alert(er)
                    }
                });

                //$.ajax({
                //    type: "Post",
                //    url: '@Url.Action("Deleteexistingconnector", "Connectors")?id=' + conn_gid,
                //    //url: "../Connectors/Deleteexistingconnector?id=" + conn_gid,
                //    dataType: "json",
                //    contentType: 'application/json; charset=utf-8',
                //    success: function (response) {
                //        jAlert(response, "Connector", function (g) {
                //            if (g == true) {
                //                window.location.href = '@Url.Action("Connectorslist", "Connectors")';
                //            }
                //        });
                //    },
                //    error: function (er) {
                //        jAlert(er, "Error");
                //        //alert(er)
                //    }
                //});
            }
            else {
                text = "You canceled!";
            }
        });
    }
