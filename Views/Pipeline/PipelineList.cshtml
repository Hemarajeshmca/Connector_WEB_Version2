    function editpipeline(e) {
        var entityGrid = $("#pipelineGrid").data("kendoGrid");
        var ppl_gid = entityGrid.dataItem(e.select().closest("tr")).pipeline_gid;
        if (ppl_gid > 0) {
            window.location.href = '@Url.Action("PipelineNew", "Pipeline")?id=' + ppl_gid;
            sessionStorage.setItem("ppl_mode", "Edit");
        }
    }

    function hrefFunction() {
        window.location.href = '@Url.Action("PipelineNew", "Pipeline")?id=0';
        sessionStorage.setItem("ppl_mode", "Create");
    }

    function deletepipeline(e) {
        let text = "Are you sure to delete?";
        jConfirm(text, "Connector", function (f) {
            if (f == true) {
                var entityGrid = $("#pipelineGrid").data("kendoGrid");
                var v_pipeline_code = entityGrid.dataItem(e.select().closest("tr")).pipeline_code;
                $.ajax({
                    type: "Post",
                    url: '@Url.Action("Deleteexistingpipeline", "Pipeline")?pipeline_code=' + v_pipeline_code,
                    dataType: "json",
                    success: function (response) {
                        jAlert(response, "Connector", function (g) {
                            if (g == true) {
                                location.reload();
                            }
                        });
                    },
                    error: function (er) {
                        jAlert(er, "Error");
                    }
                });
            } else {
                text = "You canceled!";
            }
        });
    }

