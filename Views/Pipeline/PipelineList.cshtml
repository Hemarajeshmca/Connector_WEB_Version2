    function PPLcloneSave(v_pipeline_code) {
        var txt_newpplname = $("#txt_newpplname").val();
        if (txt_newpplname.trim() == "" || txt_newpplname.trim() == undefined) {
            jAlert("Please enter pipeline name.", "Connector");
            return;
        }
        var trgdataset = document.getElementById("trgdataset");
        var v_trgdataset = trgdataset.value;
        var v_trgdataset = v_trgdataset.toString().split('-')[0];;

        if (v_trgdataset == "") {
            jAlert("Please Select the targetdatset..!", "Connector");
            return;
        }

        let text = "Are you sure to clone?";
        jConfirm(text, "Connector", function (f) {
            if (f == true) {
                var data = {};
                data.in_pipeline_name = txt_newpplname;
                data.in_pipeline_code = v_pipeline_code;
                data.in_dataset_code = v_trgdataset;
                data.out_srcfile_name = "";
                data.out_dstfile_name = "";
                data.out_msg = "";
                data.out_result = 0;
                $.ajax({
                    type: "Post",
                    url: '@Url.Action("pipeline_clone", "Pipeline")',
                    data: JSON.stringify(data),
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (response) {
