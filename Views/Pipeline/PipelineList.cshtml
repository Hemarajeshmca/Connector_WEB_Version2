    function loadtrgtbl(id, name) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetTargetTablelist", "Pipeline")',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                var select = $("#trgdataset");

                // Clear existing options
                select.empty();

                // Add new options from the JSON data
                select.append($("<option>").attr("value", "").text("-- Select --"));

                $.each(data, function (index, item) {
                    select.append($("<option>").attr("value", item.dataset_code).text(item.dataset_name));
                });
                $('#trgdataset').val(id + "-" + name);

            },
            error: function (er) {
                jAlert(er, "Error");
            }
        });
    }

    function DownloadTemplate(e) {
        var entityGrid = $("#pipelineGrid").data("kendoGrid");
        var pipelineCode = entityGrid.dataItem(e.select().closest("tr")).pipeline_code; // Get pipeline code from an input field
        if (!pipelineCode) {
            jAlert("Pipeline code is required.", "Error");
            return;
        }

        var fileext_val = entityGrid.dataItem(e.select().closest("tr")).source_file_name;
        if (fileext_val == "") {
            fileext_val = input.toString();
        }
        var extension = fileext_val;
        var lastIndex = extension.lastIndexOf(".");
        if (lastIndex !== -1) {
            var fileexts = extension.substring(lastIndex);
        }
        var filenameWithoutExtension = (lastIndex !== -1) ? fileext_val.substring(0, lastIndex) : fileext_val; // If no dot found, use full name

        // Construct the download URL
        var downloadUrl = `@Url.Action("TemplateDownload", "Pipeline")?pipelinecode=${encodeURIComponent(pipelineCode)}&fileExtension=${encodeURIComponent(fileexts)}&sourceFileName=${encodeURIComponent(filenameWithoutExtension)}`;

        // Trigger the file download
        window.location.href = downloadUrl;
    }

