                        template: function (dataItem) {
                            let downloadIcon = "";

                            // Check if source_db_type is 'CSV' or 'EXCEL' dataItem.source_db_type === 'CSV' ||
                            if (dataItem.pipeline_status == 'Active' && dataItem.source_db_type === 'Excel') {
